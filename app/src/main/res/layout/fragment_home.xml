<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_margin="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/custom_compliant" />
    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupEmptyPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="includeEmptyPage"/>
    <include
        android:id="@+id/includeEmptyPage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        layout="@layout/custom_empty_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <include
        android:id="@+id/includeTotalComplaint"
        android:layout_width="0dp"
        android:layout_margin="@dimen/_12sdp"
        android:layout_height="wrap_content"
        layout="@layout/custom_total_complaint"
        app:layout_constraintTop_toBottomOf="@id/recyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_12sdp"/>
    <include
        android:id="@+id/includeInformationBank"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/custom_info"
        android:layout_margin="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/includeTotalComplaint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <include
        android:id="@+id/includeContactUs"
        android:layout_width="0dp"
        android:layout_margin="@dimen/_12sdp"
        android:layout_height="wrap_content"
        layout="@layout/custom_info"
        app:layout_constraintTop_toBottomOf="@id/includeInformationBank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>