<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale">

    <com.google.android.material.card.MaterialCardView

        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:shadowColor="@color/textIcon"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="0.5dp"
        tools:context=".login.presentation.ui.home.sama.ContactUsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddress"
                style="@style/TextViewWithZeroWidthBlackColorNoMargin"
                android:layout_marginStart="@dimen/_12sdp"
                android:text="@string/address"
                app:layout_constraintBottom_toBottomOf="@id/imAddress"
                app:layout_constraintStart_toEndOf="@id/imAddress"
                app:layout_constraintTop_toTopOf="@id/imAddress" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGetAddress"
                style="@style/TextViewWithZeroWidthGrayColorNoMargen"
                app:layout_constraintStart_toStartOf="@id/tvAddress"
                app:layout_constraintTop_toBottomOf="@id/tvAddress"
                tools:text="الرياض- المملكة العرببة السعودية" />

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@color/lightGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGetAddress" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imPostOffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_post_office"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGetAddress" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPostOffice"
                style="@style/TextViewWithZeroWidthBlackColorNoMargin"
                android:layout_marginStart="@dimen/_12sdp"
                android:text="@string/post_box"
                app:layout_constraintBottom_toBottomOf="@id/imPostOffice"
                app:layout_constraintStart_toEndOf="@id/imPostOffice"
                app:layout_constraintTop_toTopOf="@id/imPostOffice" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGetPostOffice"
                style="@style/TextViewWithZeroWidthGrayColorNoMargen"
                app:layout_constraintStart_toStartOf="@id/tvPostOffice"
                app:layout_constraintTop_toBottomOf="@id/tvPostOffice"
                tools:text="2992" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@color/lightGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGetPostOffice" />

            <!--            <View-->
            <!--                android:id="@+id/view1"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="1dp"-->
            <!--                android:layout_margin="@dimen/_2sdp"-->
            <!--                android:background="@color/lightGray"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toBottomOf="@id/tvGetAddress" />-->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPhone"
                style="@style/TextViewWithZeroWidthBlackColorNoMargin"
                android:layout_marginStart="@dimen/_12sdp"
                android:text="@string/phone_number"
                app:layout_constraintBottom_toBottomOf="@id/imPhone"
                app:layout_constraintStart_toEndOf="@id/imPhone"
                app:layout_constraintTop_toTopOf="@id/imPhone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGetPhone"
                style="@style/TextViewWithZeroWidthGrayColorNoMargen"
                app:layout_constraintStart_toStartOf="@id/tvPhone"
                app:layout_constraintTop_toBottomOf="@id/tvPhone"
                tools:text="+966535020871" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@color/lightGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGetPhone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imFox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFox"
                style="@style/TextViewWithZeroWidthBlackColorNoMargin"
                android:layout_marginStart="@dimen/_12sdp"
                android:text="@string/fax"
                app:layout_constraintBottom_toBottomOf="@id/imFox"
                app:layout_constraintStart_toEndOf="@id/imFox"
                app:layout_constraintTop_toTopOf="@id/imFox" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGetFox"
                style="@style/TextViewWithZeroWidthGrayColorNoMargen"
                app:layout_constraintStart_toStartOf="@id/tvFox"
                app:layout_constraintTop_toBottomOf="@id/tvFox"
                tools:text="+966535020871" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:shadowColor="@color/textIcon"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView1"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="0.5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imFollowUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:scaleType="fitCenter"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/icon_follow_us"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imYouTube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/youtube"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toStartOf="@id/imLinkedIn"
                app:layout_constraintStart_toEndOf="@id/imFollowUs"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imLinkedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="fitCenter"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/linkedin"
                app:layout_constraintEnd_toStartOf="@id/imTwitter"
                app:layout_constraintStart_toEndOf="@id/imYouTube"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/x"
                android:padding="@dimen/_10sdp"
                app:layout_constraintEnd_toStartOf="@id/imFacebook"
                app:layout_constraintStart_toEndOf="@id/imLinkedIn"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:scaleType="fitCenter"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/facebook"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imTwitter"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>